/**index.wxss**/
.home{
  min-height: 100vh;
}
.book-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 40rpx;
  box-sizing: border-box;
}
.book{
  width: 30%;
  margin-bottom: 30rpx;
  border-radius: 6rpx;
  overflow: hidden;
}
.book-img.iconfont{
  text-align: center;
  height: 260rpx;
  font-size: 50rpx;
  font-weight: bold;
  line-height: 260rpx;
  border-radius: 6rpx;
  color: #c6c6cc;
  background-color: #f5f5f8;
}
.book-img{
  position: relative;
}
.book-name{
  width: 100%;
}
.book-state{
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  font-size: 10px;
  padding: 8rpx;
  border-radius: 6rpx;
  color: white;
  background-color: #535353;
}
.book image{
  display: block;
  width: 100%;
  height: 260rpx;
  margin-bottom: 20rpx;
  border-radius: 6rpx;
  background-color: #f1f1f1;
}
.book:last-child{
  /* visibility: hidden; */
  height: 0;
}

/* 夜间模式 */
.night image{
  opacity: .7;
}
.night .book-state{
  background-color: #18181a;
}
.night .iconfont.book-img{
  background-color: #1d1d20;
  color: #4c4b53;
}
